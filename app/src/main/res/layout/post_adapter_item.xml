<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="380dp"
    android:layout_height="250dp"
    android:layout_gravity="center|top"
    android:layout_marginTop="20dp">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shadow" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:background="@drawable/your_rounded_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/nameModule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/museocyrl"
            android:text="ПМ 02.01"
            android:textColor="#013773"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dateStartModule"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/museocyrl"
            android:text="12.10.2022"
            android:textColor="#013773"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/museocyrl"
            android:text="-"
            android:textColor="#013773"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dateEndModule"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/museocyrl"
            android:text="07.02.2023"
            android:textColor="#013773"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/statusPractice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/museocyrl"
            android:text="Не сдано"
            android:textColor="#696969"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:fontFamily="@font/museocyrl"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="30dp"
            android:text="/5"
            android:textColor="#013773"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:fontFamily="@font/museocyrl"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="70dp"
            android:text="/5"
            android:textColor="#013773"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/teacherEvaluation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:fontFamily="@font/museocyrl"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="30dp"
            android:text="0"
            android:textColor="#013773"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/evaluationOfTheOrganization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:fontFamily="@font/museocyrl"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="70dp"
            android:text="0"
            android:textColor="#013773"
            android:textSize="32sp"
            android:textStyle="bold" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>